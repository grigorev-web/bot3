# ========================================
# LLM API Configuration
# ========================================

# LLM Provider (proxyApi)
LLM_PROVIDER=proxyApi

# ProxyAPI Configuration
PROXYAPI_KEY=your_proxyapi_key_here
PROXYAPI_BASE_URL=https://api.proxyapi.ru

# Выберите одну из моделей:
# OpenAI модели:
PROXYAPI_MODEL=gpt-3.5-turbo-0125
# PROXYAPI_MODEL=gpt-4o-mini
# PROXYAPI_MODEL=gpt-4o

# Anthropic модели:
# PROXYAPI_MODEL=claude-3-5-sonnet-20241022
# PROXYAPI_MODEL=claude-3-5-haiku-20241022

# Google модели:
# PROXYAPI_MODEL=gemini-2.0-flash
# PROXYAPI_MODEL=gemini-2.5-flash

# DeepSeek модели:
# PROXYAPI_MODEL=deepseek-chat

PROXYAPI_MAX_TOKENS=1000
PROXYAPI_TEMPERATURE=0.7
PROXYAPI_TIMEOUT=30000

# Global LLM Settings
LLM_MAX_RETRIES=3
LLM_ENABLE_CACHING=true
LLM_ENABLE_LOGGING=true

# Node Environment
NODE_ENV=development